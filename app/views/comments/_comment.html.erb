<div id="<%= dom_id comment %>" class="bg-gray-100 shadow-md rounded px-8 pt-6 pb-8 mb-4 ml-10">
  <div class="grid grid-cols-12">
    <div class="cols-span-1 ">
      <div class="grid grid-rows-3 justify-items-center">
      <%= button_to "▲", comment_upvote_path(comment), method: :post %>
        <%= post.get_upvotes.size - post.get_downvotes.size %>
      <%= button_to "▼", comment_downvote_path(comment), method: :post %>
      </div>
    </div>
    <div class="cols-span-1">
      <h4 class="text-sm">u/<%= comment.user.username %></h4>
    </div>
  </div>
  <br>
  <p class="text-m"><%= comment.content %></p>
  <%= render "replies" %>
</div>