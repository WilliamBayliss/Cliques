          </button>
      </div>
      <% if user_signed_in? %>
      <%# DROPDOWN MENU USER %>
      <div data-controller="dropdown" class="relative inline-block text-left">
        <div>
          <button data-action="dropdown#toggle" type="button" class="inline-flex w-full justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-100" id="menu-button" aria-expanded="true" aria-haspopup="true">
            <%= current_user.username %>
            <!-- Heroicon name: mini/chevron-down -->
            <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
        <div data-dropdown-target="menu" class="hidden absolute right-0 z-10 mt-2 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
          <div class="py-1" role="none">
            <!-- Active: "bg-gray-100 text-gray-900", Not Active: "text-gray-700" -->
            <%= link_to "Profile", user_path(current_user), class: "text-gray-700 block px-4 py-2 text-sm hover:bg-blue-600 hover:text-white" %>
            <form method="POST" action="#" role="none">
              <%= link_to "Sign out", destroy_user_session_path, class: "text-gray-700 block w-full px-4 py-2 text-left text-sm hover:bg-blue-600 hover:text-white" %>
            </form>
          </div>
        </div>
      </div>
      <%# END %>
      <% else %>
      <div class="space-x-4">
        <%= link_to new_user_session_path do %>
        <button class="bg-transparent hover:bg-blue-300 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
          <h1>Sign in</h1>
        </button>
        <% end %>   
        <%= link_to new_user_registration_path do %>
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
          <h1>Sign up</h1>
        </button>
        <% end %>
