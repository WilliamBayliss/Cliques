<div class="bg-gray-100 shadow-md rounded px-8 pt-6 pb-8 mt-28 mb-4">
  <h1 class="text-xl">My Cliques</h1>
  <div class="grid grid-rows-auto overflow-x-auto">
    <% current_user.cliques.each do |clique| %>
    <div class="mt-3 mb-3 break-words">
      <%= link_to clique_path(clique) do %>
      <div class="bg-gray-200 shadow-md rounded px-4 pt-4 pb-4 mb-4">
          <h2 class="text-xl"><%= clique.title %></h2>
          <% if clique.administrators.include? current_user %>
            <h3 class="text-l justify-self-right">ADMIN</h3>
          <% end %>
          <h4 class="text-sm">Reputation: <%=  %></h4>
          <h4 class="text-sm"><%= clique.members.length %> members</h4>
          <h4 class="text-sm"><%= clique.posts.length %> posts</h4>
      </div>
      <% end %>
    </div>
    <% end %>
</div>