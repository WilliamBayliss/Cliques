<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mt-28 mb-4">
    <h1 class="text-xl">My Cliques</h1>
    <div class="grid grid-rows-5 overflow-x-auto">
    <% current_user.cliques.each do |clique| %>
      <div class="grid-rows-1 mt-3 mb-3 break-words">
        <%= link_to cliques_path(clique) do %>
        <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mt-28 mb-4">
            <h2 class="text-xl"><%= clique.title %></h2>
            <h4 class="text-sm"><%= clique.members.length %> members</h4>
            <h4 class="text-sm"><%= clique.posts.length %> posts</h4>

        </div>
        <% end %>
      </div>
    </div>
    <% end %>
    <% if current_user.admin_cliques.length > 0 %>
      <% current_user.admin_cliques.each do |clique| %>
        <%= link_to cliques_path(clique)  do %>
        <div class="grid-rows-1 mt-3 mb-3 break-words">
          <h2 class="text-xl"><%= clique.title %></h2>
        </div>
        <% end %>
      <% end %>
    <% end %>

</div>