<div class="w-full">
<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
<% end %>
<div class="flex justify-between items-center">
  <h1 class="font-bold text-4xl"><%= @clique.title %> Membership Requests</h1>
</div>
<div id="requests" class="min-w-full">
    <% @requests.each do |request| %>
        <div class="m-5 bg-gray-100 shadow-md rounded px-8 pt-6 pb-8 mb-5 grid grid-cols-3">
          <div class="column">
            <%= link_to request.user.username, user_path(request.user), class: "font-bold text-3xl mt-3" %>
            <p class="mt-5">Reputation: <%= request.user.reputation %></p>
            <p class="mt-2">Posts: <%= request.user.posts.count %></p>
          </div>
          <div class="column">
            <%= button_to "Approve", membership_accept_path(request), method: 'post', class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium" %>
          </div>
        </div>
    <% end %>
  </div>
</div>