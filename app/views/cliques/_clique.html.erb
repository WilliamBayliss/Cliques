<div id="<%= dom_id clique %>">
  <% if action_name != "show" %>
    <%= link_to "Show this clique", clique, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this clique', edit_clique_path(clique), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
