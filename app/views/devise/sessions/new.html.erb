<div class="justify-between items-center grid grid-cols-2 gap-4">
  <div class="m-10">
    <h1 class="text-6xl m-10 text-blue-500">Log in</h1>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 ml-10" }) do |f| %>
    <div class="mb-4">
      <%= f.text_field :login, autofocus: true, autocomplete: "login", placeholder: "Username/Email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"  %>
    </div>

    <div class="mb-4">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"  %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.submit "Log in" %>
    </div>

    <h2>----- Or -----</h2>
    FACEBOOK TWITTER SIGN IN
  <% end %>
</div>
