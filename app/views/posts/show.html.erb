<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= link_to 'Back to posts', posts_path, class: "mb-4 rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium" %>

    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @post %>

    <%= link_to 'Edit', edit_post_path(@post), class: "mt-2 rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Delete', post_path(@post), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-200 font-medium" %>
    </div>
  </div>
</div>
