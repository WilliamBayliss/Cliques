<!DOCTYPE html>
<html>
  <head>
    <title>Cliques</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render 'navbar' %>
    <div class="grid grid-cols-5 gap-2">
      <% if user_signed_in? %>
      <div class="col-span-1 w-full mt-28">
        <%= render 'profile_card' %>
      </div>
      <% end %>
      <div class="col-span-3 w-full mx-auto mt-28 px-5 flex">
        <%= yield %>
      </div>
      <% if user_signed_in? %>    
        <div class="col-span-1 w-full mr-10">
          <%= render 'my_cliques' %>
        </div>
      <% end %>

      </div>
    </div>
  </body>
</html>
